<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="menuItem"
            type="com.follett.fsc.mobile.circdesk.model.HomeMenuModel" />

        <variable
            name="listener"
            type="com.follett.fsc.mobile.circdesk.interfaces.ItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{()->listener.OnItemClick()}"
        android:orientation="vertical"
        android:padding="30dp">


        <ImageView
            android:id="@+id/itemMenuImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/receive" />

        <TextView
            android:id="@+id/itemMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/checkInCheckout"
            android:textColor="@color/blueLable"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>

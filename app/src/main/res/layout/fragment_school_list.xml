<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="ctaListener"
            type="com.follett.fsc.mobile.circdesk.app.CTAButtonListener"/>

        <variable
            name="viewModel"
            type="com.follett.fsc.mobile.circdesk.feature.loginsetup.viewmodel.SchoolListViewModel"/>

    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/schoolRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/noschoollist"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/school_noschoollist"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/schoollist_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/bottom_bar"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_size_36"
                android:layout_marginHorizontal="@dimen/layout_size_16"
                android:layout_marginVertical="@dimen/layout_size_18"
                android:background="@drawable/rounded_corners_button"
                android:gravity="center"
                android:text="@string/dont_see_your_school"
                android:onClick="@{(v)->ctaListener.ctaButtonOnClick(v)}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="patronItem"
            type="com.follett.fsc.mobile.circdesk.data.model.Patron" />

        <variable
            name="listener"
            type="com.follett.fsc.mobile.circdesk.interfaces.ItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/patronImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/receive" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patronName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Barcode"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/patronHomeRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="HomeRoom"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/patronGradeLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="GradeLevel"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</layout>

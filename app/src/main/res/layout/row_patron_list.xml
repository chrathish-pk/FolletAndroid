<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="patronItem"
            type="com.follett.fsc.mobile.circdesk.feature.checkoutcheckin.model.ScanPatron" />

        <variable
            name="listener"
            type="com.follett.fsc.mobile.circdesk.app.ItemClickListener" />
    </data>


    <LinearLayout
        android:id="@+id/patronLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/patronImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patronName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/barcodeLabel"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/patronHomeRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/homeRoomLabel"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/patronGradeLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/gradeLevelLabel"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/editTextBgColor" />
        </LinearLayout>
    </LinearLayout>


</layout>
